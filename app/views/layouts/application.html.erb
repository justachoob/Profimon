<!DOCTYPE html>
<html>
  <head>
    <title>Profimon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
    <div class="navbar-class">
      <%= link_to 'PROFIMON' , root_path , :style => "color: white; font-size: 1.5em; text-decoration: none" %>
      <div class="navbar-class-right">
       <% if session[:user_id] != nil %>
          <% if session[:admin] == true %>
            <%= link_to 'ADMIN SETTINGS' , users_path %>
          <% end %>
          <%= link_to 'PROFILE' , user_path( :id => session[:user_id]) %>
          <%= link_to 'LOGOUT' , logout_path , method: :delete %>
        <% end %>
      </div>
    </div>
    </header>
    <%= yield %>
  </body>
</html>
