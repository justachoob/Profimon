
<%= form_for user do |f| %>

<% if user.errors.any? %>

  <p style="color: red">The following errors occurred:</p>

  <div id="error_explanation">
    <% user.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
<% end %>

  <div class="field">
    <%= f.label :name, 'Username (min. 6 characters):' %><br>
    <%= f.text_field :name, class: 'input_field_center' %>
  </div>

  <div class="field">
    <%= f.label :email, 'Email:' %><br>
    <%= f.text_field :email, class: 'input_field_center' %>
  </div>

  <div class="field">
    <%= f.label :password, 'Password (min. 6 characters):' %><br>
    <%= f.password_field :password, class: 'input_field_center' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirm Password:'%><br>
    <%= f.password_field :password_confirmation, class: 'input_field_center' %>
  </div>

  <div class="radio_buttons">
    <%= f.radio_button :admin, false %>
    <%= f.label :admin, "Regular" %>

    <%= f.radio_button :admin, true %>
    <%= f.label :admin, "Admin" %>
  </div>

  <br>

  <div class="actions">
    <%= link_to 'Back', root_path, :class => "form_link" %> 
    <%= f.submit "Create User", class: "form_button" %>
  </div>



<% end %>
