<!-- Test to see if skills were added to database -->
<div class="main">

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

<%= render 'adminnav' %>

<h1>List of Skills</h1>

<table id="table_of_skills" style="text-align: center; margin: 10px auto;">
  <tr>
    <th width="200px">Skill</th>
    <th width="200px">Subject</th>
    <th width="200px">Stamina</th>
    <th width="200px">GPA Required</th>
    <th width="200px">Knowledge</th>
    <th width="200px">Homework</th>
  </tr>


  <% @skills.each do |s| %>
    <tr>
      <td><%= s.name %></td>
      <td><%= s.subject %></td>
      <td><%= s.stamina %></td>
      <td><%= s.gpa_required %></td>
      <td><%= s.knowledge %></td>
      <td><%= s.homework %></td>
      <td><%= link_to 'Edit', edit_skill_path(s), style: "margin-right: 20px;" %> </td>
      <td><%= link_to 'Delete', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>

<div class="admin_footer_links">
 <%= link_to 'New Skill', new_skill_path, :class => "form_link" %>
 <%= link_to 'Back', admin_path, :class => "form_link" %>
 </div>
</div>
