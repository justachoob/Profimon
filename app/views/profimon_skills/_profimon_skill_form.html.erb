
<%= form_for profimon_skill do |f| %>

<% if profimon_skill.errors.any? %>

  <p style="color: red">The following errors occurred:</p>

  <div id="error_explanation">
    <% profimon_skill.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
<% end %>

  <div class="field">
    <%= f.label :name, 'Profimon Skill Name' %><br>
    <%= f.text_field :name, class: 'input_field_center' %>
  </div>

  <div class="field">
    <%= f.label :subject, 'Subject' %><br>
    <%= f.collection_select :subject, @subjects, :to_s, :to_s %>
  </div>

  <div class="field">
    <%= f.label :stamina, 'Stamina' %><br>
    <%= f.number_field :stamina, class: 'input_field_center' %>
  </div>

  <div class="field">
    <%= f.label :knowledge, 'Knowledge' %><br>
    <%= f.number_field :knowledge, class: 'input_field_center' %>
  </div>

  <div class="field">
    <%= f.label :homework, 'Homework' %><br>
    <%= f.number_field :homework, class: 'input_field_center' %>
  </div>

  <div class="actions">
    <% if profimon_skill.new_record? %>
      <%= link_to 'Back' , profimon_skills_path, class: 'form_link' %><%= f.submit "Create Profimon Skill" ,class:"form_button" %>
    <% else %>
      <%= link_to 'Back' , profimon_skills_path, class: 'form_link' %><%= f.submit "Save Changes",class:"form_button" %>
    <% end %>
  </div>



<% end %>
